@using e_commerce.Dtos;
@using e_commerce.Models.asbstractClasses;

@model IEnumerable<ProductAdminIndexDto>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
   
    <form  asp-action="Create" method="get">
        <div class="form-group">
                <label for="type">Select Product Type for creation:</label>
                <select id="type" name="dtoType" class="form-control">
                <option value="Processor" >Processor</option>
                <option value="VideoCard">VideoCard</option>
                
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Crear</button>
    </form>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @if (Model != null)
            {
                @if (Model.Count() == 0)
                {
                    <tr> Noproducts found</tr>
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Manufacter)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }

            }
        </tbody>
</table>
</body>
</html>
